<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.darius.taller_uber.SignUpActivity">

    <!-- Login progress -->
    <ProgressBar
        android:id="@+id/signup_progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"/>

    <ScrollView
        android:id="@+id/signup_form"
        android:layout_width="336dp"
        android:layout_height="463dp"
        >

        <LinearLayout
            android:id="@+id/signup_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:src="@drawable/logo_huver"/>

            <!--<CheckBox-->
            <!--android:id="@+id/CheckBoxResponse"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="CheckBox"-->
            <!--android:layout_width="fill_parent">-->
            <!--</CheckBox>-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/action_register"
                android:textAlignment="center"
                android:textSize="30dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/passenger_signup"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/taxi_passanger"
                android:textAlignment="center"
                android:includeFontPadding="true"
                android:elevation="0dp"
                android:text="Pasajero"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/driver_signup"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:drawableTop="@drawable/bus_driver"
                android:textAlignment="center"
                android:includeFontPadding="true"
                android:elevation="0dp"
                android:text="Conductor"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
